<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="#ffffff">

            <ImageView
                android:id="@+id/comment_uploader_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/comment_uploader_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_below="@+id/comment_uploader_image"
                android:layout_alignStart="@+id/comment_uploader_image"
                android:layout_alignEnd="@+id/comment_uploader_image"
                android:text="testid"/>

            <TextView
                android:id="@+id/comment_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/comment_uploader_image"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:text="testtest"/>

            <TextView
                android:id="@+id/comment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/comment_review"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/comment_uploader_image"
                android:layout_alignParentEnd="false"
                android:layout_alignParentStart="false"
                android:textColor="#d2d2d3"
                android:text="time"/>

            <ImageButton
                android:id="@+id/comment_like_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_like"
                android:layout_alignParentRight="true"
                android:layout_marginTop="35dp"
                android:layout_marginRight="37dp"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/comment_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/comment_like_btn"
                android:layout_alignStart="@+id/comment_like_btn"
                android:layout_alignEnd="@+id/comment_like_btn"
                android:gravity="center"
                android:textColor="#d2d2d3"
                android:text="10" />

        </RelativeLayout>

</LinearLayout>