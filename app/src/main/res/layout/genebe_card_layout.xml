<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    cardview:cardElevation="5dp"
    android:layout_margin="2dp"
    android:gravity="center_horizontal">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/cv">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:id="@+id/card_head"
                    android:src="@drawable/card_head"
                    android:layout_height="75dp"
                    android:background="#dbdbdb"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/writer_id"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:text="id"
                    android:textColor="#211e0b"
                    android:layout_alignBottom="@+id/card_head"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/photo_layout">

             </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/genebe_app_name"
                android:scaleType="centerCrop"
                android:id="@+id/photos1"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/genebe_app_name"
                android:scaleType="centerCrop"
                android:id="@+id/photos2"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/genebe_app_name"
                android:scaleType="centerCrop"
                android:id="@+id/photos3"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/route_name"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#211e0b"
                android:text="경로 이름"
                android:padding="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/route_content"
                android:textColor="#39393a"
                android:text="코스에 관한 내용"
                android:padding="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tags"
                android:textColor="#9d9d9d"
                android:text="태그들"
                android:padding="10dp"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/line"
                android:src="@drawable/card_line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true">
                <ImageButton
                    android:scaleType="centerInside"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_share"
                    android:layout_margin="5dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:gravity="right">
                    <ImageButton
                        android:id="@+id/like_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_like"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:id="@+id/like_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="120"
                        android:layout_marginRight="5dp"
                        android:textColor="#9d9d9d"/>
                    <ImageButton
                        android:id="@+id/comment_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_comment"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:id="@+id/comment_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25"
                        android:textColor="#9d9d9d"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>

