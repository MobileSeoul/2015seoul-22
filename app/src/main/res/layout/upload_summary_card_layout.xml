<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#dbdbdb"
    android:id="@+id/cv"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    cardview:cardCornerRadius="0dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="#39393a">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/card_head"
                android:src="@drawable/card_head"
                android:layout_width="220dp"
                android:layout_height="94dp"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/upload_summary_userid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/card_head"
                android:text="@string/title_activity_card_detail"
                android:layout_centerHorizontal="true"
                android:paddingBottom="5dp"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/upload_summary_store_img1"
            android:layout_width="220dp"
            android:layout_height="165dp"
            android:src="@drawable/upload_camera"
            android:background="#ffffff"
            android:scaleType="fitXY"
            android:contentDescription="@string/abc_activitychooserview_choose_application"/>
        <ImageView
            android:id="@+id/upload_summary_store_img2"
            android:layout_width="220dp"
            android:layout_height="165dp"
            android:src="@drawable/upload_camera"
            android:background="#ffffff"
            android:scaleType="fitXY"
            android:layout_margin="0.5dp"
            android:contentDescription="@string/abc_activitychooserview_choose_application"/>
        <ImageView
            android:id="@+id/upload_summary_store_img3"
            android:layout_width="220dp"
            android:layout_height="165dp"
            android:src="@drawable/upload_camera"
            android:background="#ffffff"
            android:scaleType="fitXY"
            android:layout_margin="0.5dp"
            android:contentDescription="@string/abc_activitychooserview_choose_application"/>
        <ImageView
            android:id="@+id/upload_summary_store_img4"
            android:layout_width="220dp"
            android:layout_height="165dp"
            android:src="@drawable/upload_camera"
            android:background="#ffffff"
            android:scaleType="fitXY"
            android:layout_margin="0.5dp"
            android:contentDescription="@string/abc_activitychooserview_choose_application"/>

        <EditText
            android:id="@+id/upload_summary_post_title"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#ffffff"
            android:padding="10dp"
            android:hint="게시물 제목"/>

        <EditText
            android:id="@+id/upload_summary_post_review"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#ffffff"
            android:padding="10dp"
            android:hint="게시물 리뷰"/>

        <EditText
            android:id="@+id/upload_summary_post_hashtag"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#ffffff"
            android:padding="10dp"
            android:hint="해쉬태그"/>

        <ImageView
            android:id="@+id/card_tail"
            android:src="@drawable/card_tail"
            android:layout_width="220dp"
            android:layout_height="46dp"
            android:scaleType="fitXY"
            android:layout_margin="0.5dp"/>
    </LinearLayout>
</android.support.v7.widget.CardView>
